{
  "name": "goodwin-build-runner",
  "displayName": "goodwin-build-runner",
  "description": "Extension for Flutter build runner",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "goodwin-build-runner.buildAll",
        "title": "Buill all"
      },
      {
        "command": "goodwin-build-runner.buildCurrentFile",
        "title": "Build current file"
      }
    ],
    "keybindings": [
      {
        "command": "goodwin-build-runner.buildAll",
        "key": "ctrl+shift+q",
        "mac": "cmd+shift+q",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
            "title": "Goodwin Build runner Settings",
            "properties": {
                "goodwinExtension.FlutterIsNotRootFolder": {
                    "type": "boolean",
                    "default": false,
                    "description": "  Если проект Flutter не находится в корневой директории"
                },
                "goodwinExtension.pathToProjectRoot": {
                    "type": "string",
                    "default": null,
                    "description": "Путь к корневому каталогу Flutter проекта."
                }
            }
        }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test --code-version 1.93.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
